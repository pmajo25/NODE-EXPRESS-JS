            }
        ];

        const contenedor = document.getElementById("catalogo-libros");

        librosRecomendados.forEach(libro => {
            const col = document.createElement("div");
            col.className = "col-sm-6 col-md-4 col-lg-3";
            col.innerHTML = `
                <div class="card h-100 shadow-sm">
                    <img src="${libro.imagen}" class="card-img-top" alt="${libro.titulo}">
                    <div class="card-body">
                        <h5 class="card-title">${libro.titulo}</h5>
                        <p class="card-text"><small class="text-muted">${libro.autor}</small></p>
                    </div>
                </div>
            `;
            contenedor.appendChild(col);
        });
    </script>
</body>

</html>
